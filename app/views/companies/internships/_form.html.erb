<%= bootstrap_form_with(model: internship, url: url, local: true) do |f| %>
<%= f.text_field :title %>
<%= f.collection_select :internship_attendance_type_id, InternshipAttendanceType.all, :id, :name, { include_blank: "選択してください" } %>
<%= f.collection_select :internship_category_id, InternshipCategory.all, :id, :name, { include_blank: "選択してください" } %>
<%= f.date_field :start_date %>
<%= f.date_field :end_date %>
<%= f.text_area :description %>
<%= f.date_field :deadline %>
<%= f.text_field :location %>
<%= f.text_field :target %>
<%= f.file_field :thumbnail %>
<%= f.number_field :acceptable_number %>
<%= f.text_area :others %>

<%= f.submit submit_label, class: "btn btn-primary mt-3 text-white w-100" %>
<% end %>
